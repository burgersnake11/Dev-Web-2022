use dev3;





CREATE TABLE `maladie` (
  `id_maladie` int NOT NULL AUTO_INCREMENT,
  `diabete` tinyint(1) DEFAULT NULL,
  `maladie_cardiaque` tinyint(1) DEFAULT NULL,
  `affection_peau` tinyint(1) DEFAULT NULL,
  `somnambulisme` tinyint(1) DEFAULT NULL,
  `insomnie` tinyint(1) DEFAULT NULL,
  `incontinence` tinyint(1) DEFAULT NULL,
  `eczema` tinyint(1) DEFAULT NULL,
  `asthme` tinyint(1) DEFAULT NULL,
  `sinusite` tinyint(1) DEFAULT NULL,
  `bronchite` tinyint(1) DEFAULT NULL,
  `saignement_nez` tinyint(1) DEFAULT NULL,
  `maux_tete` tinyint(1) DEFAULT NULL,
  `maux_ventre` tinyint(1) DEFAULT NULL,
  `constipation` tinyint(1) DEFAULT NULL,
  `diarrhee` tinyint(1) DEFAULT NULL,
  `mal_route` tinyint(1) DEFAULT NULL,
  PRIMARY KEY (`id_maladie`)
)





CREATE TABLE `allergie` (
  `id_allergie` int NOT NULL AUTO_INCREMENT,
  `acarien` tinyint(1) DEFAULT NULL,
  `pollen` tinyint(1) DEFAULT NULL,
  `soleil` tinyint(1) DEFAULT NULL,
  `maquillage` tinyint(1) DEFAULT NULL,
  `savons` tinyint(1) DEFAULT NULL,
  `poils_animaux` tinyint(1) DEFAULT NULL,
  `autres` varchar(255) DEFAULT NULL,
  PRIMARY KEY (`id_allergie`)
)





CREATE TABLE `sante` (
  `id_sante` int NOT NULL AUTO_INCREMENT,
  `date_dernier_tetanos` date DEFAULT NULL,
  `groupe_sanguin` varchar(255) DEFAULT NULL,
  `protection_nuit` tinyint(1) DEFAULT NULL,
  `peur_nuit` tinyint(1) DEFAULT NULL,
  `appareil_amovible` tinyint(1) DEFAULT NULL,
  `appareil_audifitif` tinyint(1) DEFAULT NULL,
  `id_maladie` int DEFAULT NULL,
  `id_allergie` int DEFAULT NULL,
  PRIMARY KEY (`id_sante`),
  KEY `id_maladie` (`id_maladie`),
  KEY `id_allergie` (`id_allergie`),
  CONSTRAINT `sante_ibfk_1` FOREIGN KEY (`id_maladie`) REFERENCES `maladie` (`id_maladie`),
  CONSTRAINT `sante_ibfk_2` FOREIGN KEY (`id_allergie`) REFERENCES `allergie` (`id_allergie`)
)





CREATE TABLE `responsables` (
  `id_responsables` int NOT NULL AUTO_INCREMENT,
  `nom_r1` varchar(255) DEFAULT NULL,
  `adresse_r1` varchar(255) DEFAULT NULL,
  `tel_r1` varchar(255) DEFAULT NULL,
  `email_r1` varchar(255) DEFAULT NULL,
  `nom_r2` varchar(255) DEFAULT NULL,
  `adresse_r2` varchar(255) DEFAULT NULL,
  `tel_r2` varchar(255) DEFAULT NULL,
  `email_r2` varchar(255) DEFAULT NULL,
  PRIMARY KEY (`id_responsables`)
)





CREATE TABLE `infos` (
  `id_infos` int NOT NULL AUTO_INCREMENT,
  `text_info` varchar(255) DEFAULT NULL,
  PRIMARY KEY (`id_infos`)
)





CREATE TABLE `physique` (
  `id_physique` int NOT NULL AUTO_INCREMENT,
  `nager` tinyint(1) DEFAULT NULL,
  `text_physique` varchar(255) DEFAULT NULL,
  PRIMARY KEY (`id_physique`)
)





CREATE TABLE `enfant` (
  `id_enfant` int NOT NULL AUTO_INCREMENT,
  `nom_enfant` varchar(255) DEFAULT NULL,
  `prenom_enfant` varchar(255) DEFAULT NULL,
  `ddn_enfant` date DEFAULT NULL,
  `numero_nationnal_enfant` varchar(255) DEFAULT NULL,
  `facebook` tinyint(1) DEFAULT NULL,
  `voiture` tinyint(1) DEFAULT NULL,
  `numero_urgence` varchar(255) DEFAULT NULL,
  `nom_groupe` varchar(255) DEFAULT NULL,
  `id_responsables` int DEFAULT NULL,
  `id_physique` int DEFAULT NULL,
  `id_sante` int DEFAULT NULL,
  `id_infos` int DEFAULT NULL,
  `id_groupe` int DEFAULT NULL,
  PRIMARY KEY (`id_enfant`),
  KEY `id_responsables` (`id_responsables`),
  KEY `id_physique` (`id_physique`),
  KEY `id_sante` (`id_sante`),
  KEY `id_infos` (`id_infos`),
  CONSTRAINT `enfant_ibfk_1` FOREIGN KEY (`id_responsables`) REFERENCES `responsables` (`id_responsables`),
  CONSTRAINT `enfant_ibfk_2` FOREIGN KEY (`id_physique`) REFERENCES `physique` (`id_physique`),
  CONSTRAINT `enfant_ibfk_3` FOREIGN KEY (`id_sante`) REFERENCES `sante` (`id_sante`),
  CONSTRAINT `enfant_ibfk_4` FOREIGN KEY (`id_infos`) REFERENCES `infos` (`id_infos`)
)